<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="VersaMonitor.IPPopup">


    <VerticalStackLayout Background="{StaticResource LacoGradientBrush}">
        <Label Padding="10" Margin="10" FontFamily="Lato" FontAttributes="None" FontSize="14">
            Please enter target IP Address:
        </Label>

        <Entry x:Name="IPEntry"  ClearButtonVisibility="WhileEditing" HorizontalOptions="Center" HorizontalTextAlignment="Center" IsTextPredictionEnabled="False" IsPassword="False" ReturnType="Go" />
        <Button Margin ="20" Text="Connect" Clicked="Button_Clicked"/>


    </VerticalStackLayout>

</toolkit:Popup>
